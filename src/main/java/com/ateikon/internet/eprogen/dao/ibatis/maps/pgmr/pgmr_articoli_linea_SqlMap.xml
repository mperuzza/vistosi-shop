  <select id="getMenu" parameterClass="map" resultMap="menuItemMap">
     SELECT dslinea,
            linee.cdlinea,
            coll.cdcollezione,
            dscollezione,
            linee.nrposi,
            coll.nrposi
       FROM pgmr.articoli,
            pgmr.articoli_linea al,
