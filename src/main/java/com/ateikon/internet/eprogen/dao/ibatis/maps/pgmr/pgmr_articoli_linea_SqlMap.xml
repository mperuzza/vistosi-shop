            coll.cdcollezione = profilo_collezioni.cdcollezione
        AND profilo_collezioni.cdprofilo = #cdprofilo:NUMERIC#
        </isNotEmpty>
GROUP BY dslinea, linee.cdlinea, dscollezione, coll.cdcollezione, linee.nrposi, coll.nrposi
ORDER BY linee.nrposi, dslinea, coll.nrposi, dscollezione
  </select>

<select id="countArtColl" parameterClass="map" resultClass="java.lang.Integer">
